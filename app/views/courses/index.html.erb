<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.letters %><%= course.number %></td>
        <td>
        <div class="btn-group">
          <%= link_to 'Show', course, class: "btn btn-default btn-xs" %>
          <%= link_to 'Edit', edit_course_path(course), class: "btn btn-warning btn-xs" %>
          <% if current_user.admin %>
          <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
          <% end %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

