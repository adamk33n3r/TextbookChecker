<h2>Sign up</h2>
<div class="row">
  <div class="col-sm-7">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="row">
      <div class="form-group col-sm-12">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email (must be first_last@taylor.edu format)" %>
        <em>Note: We use <%= link_to "Gravatar", "http://gravatar.com", tabindex: "-1" %> for our avatars. </em>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= f.label :password_confirmation, class: "sr-only" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-8">
        <%= f.label :year, "Graduating Year", class: "sr-only" %>
        <%= f.select "year", options_for_select(["Grad Year"]+(Time.now.year..Time.now.year + 6).to_a, selected: "Grad Year", disabled: "Grad Year"), {}, {class: "form-control"} %>
      </div>
      <div class="col-xs-4">
        <%= f.submit "Sign up", class: "btn btn-primary pull-right" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <%= render "devise/shared/links" %>
  </div>
</div>