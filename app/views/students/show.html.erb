<% provide(:title, "User Profile") %>

<div id="student_info" class="well">
  <div class="row">
    <div class="col-sm-4">
      <div class="row"><%= image_tag gravatar_url(@user, 512), class: "img-thumbnail" %></div>
      <div class="row">
        <ul class="list-unstyled">
          <li><strong>Email: </strong><%= @user.email %><% if @user == current_user %> <%= boolean @user.verified %><% end %></li>
          <li><strong>Year: </strong><%= @user.year %></li>
        </ul>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Ratings</h3></div>
        <div class="panel-body">
          <ul class="list-unstyled">
            <% @user.ratings.each do |rating| %>
              <li><%= rating %></li>
              <li><%= rating %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="well well-sm">
        <strong>Players</strong>
        <ul class="list-unstyled">
            <% @user.ratings.each do |rating| %>
              <li><%= rating %></li>
              <li><%= rating %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>
<div class="btn-group">
  <%= link_to 'Back', students_path, class: "btn btn-default btn-sm" %>
  <%= link_to 'Edit', edit_student_path(@user), class: "btn btn-warning btn-sm" %>
  <%= link_to 'Delete', student_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>
</div>
