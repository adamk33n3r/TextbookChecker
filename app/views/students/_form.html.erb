<%= form_for @user, html: {class: "form", role: "form"} do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h3><%= pluralize(@user.errors.count, "error") %>:</h3>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-sm-7">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Email (must be first_last@taylor.edu format)" %>
      <em>Note: We use <%= link_to "Gravatar", "http://gravatar.com", tabindex: "-1" %> for our avatars. </em>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-7">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-7">
      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-xs-6 col-sm-4">
      <%= f.label :year, "Graduating Year", class: "sr-only" %>
      <%= f.select "year", options_for_select(["Grad Year"]+(Time.now.year..Time.now.year + 6).to_a, selected: "Grad Year", disabled: "Grad Year"), {}, {class: "form-control"} %>
    </div>
    <div class="form-group col-xs-6 col-sm-3">
      <%= f.submit class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
