<%= label_tag :isbn_search, "ISBN Search:" %>
<%= text_field_tag :isbn_search, "9780123750303", :style => "color: #bbb" %>
<%= div_to 'Search', '#', :remote => true, :id => 'search_link', :class => "small_link" %>

<%= form_tag search_textbooks_path, :method => :get do %>
  <%= text_field_tag :isbn, params[:isbn] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @textbook %>
  <%= render @textbook %>
<% end %>