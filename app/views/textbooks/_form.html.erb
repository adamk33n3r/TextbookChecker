      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :authors %><br>
    <%= f.text_field :authors %>
  </div>
  <div class="field">
    <%= f.label :edition %><br>
    <%= f.text_field :edition %>
  </div>
  <div class="field">
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, :order => [:day, :month, :year], :start_year => 1800, :end_year => Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, :value => number_with_precision(f.object.price, :precision => 2) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
